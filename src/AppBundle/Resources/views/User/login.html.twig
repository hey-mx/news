{% form_theme form 'form/fields.html.twig' %}
{% extends "::base.html.twig" %}

{% block title %}AppBundle:User:login{% endblock %}

{% block body %}
{{form_start(form)}}
    {{form_row(form.email)}}
    {{form_row(form.password)}}
    <div>
        <button type="submit">Login</button>
    </div>
{{form_end(form)}}
{% if error is not empty %}
    <div class="error">{{error}}</div>
{% endif %}
{% endblock %}
